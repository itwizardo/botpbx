# BotPBX Configuration
# Copy this file to .env and update the values

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://botpbx:YOUR_PASSWORD@localhost:5432/botpbx

# ===========================================
# SECURITY (Auto-generated by install.sh)
# ===========================================
JWT_SECRET=
# Password for browser WebRTC endpoint (used by web admin phone)
BROWSER_WEBRTC_PASSWORD=

# ===========================================
# ASTERISK AMI (Required)
# ===========================================
ASTERISK_AMI_HOST=127.0.0.1
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=botpbx
ASTERISK_AMI_SECRET=YOUR_AMI_SECRET

# ===========================================
# SERVER PORTS
# ===========================================
API_PORT=3000
WEB_API_PORT=3000
WEB_API_HOST=0.0.0.0
AGI_SERVER_PORT=4573
AUDIOSOCKET_PORT=9092
AUDIO_SOCKET_PORT=9092
BROWSER_AUDIO_PORT=9093

# ===========================================
# STORAGE PATHS
# ===========================================
AUDIO_FILES_PATH=./data/audio
ASTERISK_CONFIG_PATH=/etc/asterisk
RECORDING_PATH=/var/spool/asterisk/monitor

# ===========================================
# TELEGRAM BOT (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=
INITIAL_ADMIN_ID=

# ===========================================
# TTS PROVIDERS (Optional - can be set via Web UI)
# ===========================================
# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_DEFAULT_VOICE=21m00Tcm4TlvDq8ikWAM

# Piper TTS (local, requires piper-tts service)
PIPER_ENABLED=true
PIPER_URL=http://127.0.0.1:5050

# ===========================================
# AI PROVIDERS (Optional - can be set via Web UI)
# ===========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
DEEPGRAM_API_KEY=
ASSEMBLYAI_API_KEY=

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

# ===========================================
# AUTO-UPDATE (Optional)
# ===========================================
# Set to false to disable automatic updates
AUTO_UPDATE_ENABLED=true
